@model Dish
<div class="text-center homepage">
    <h1 class="display-4">@Model.Name</h1>
    <div class="mt-3 mb-3 d-flex justify-content-center gap-4">
        <a class="display-6" href="/">Home</a>
        <p>|</p>
        <a class="display-6" href="dishes/new">Add New Dish</a>
    </div>
    <h3>@Model.Name by @Model.Chef</h3>
    <div class="mt-2 d-flex justify-content-center">
        <hr class="w-50">
        </hr>
    </div>
    <p>@Model.Description</p>
    <p>Calories: @Model.Calories</p>
    <p>Tastiness: @Model.Tastiness</p>
    <div class="d-flex justify-content-center gap-5">
        <form asp-action="DestroyDish" asp-controller="Home" asp-route-DishId="@Model.DishId" method="post">
            <input class="btn btn-danger" type="submit" value="Delete">
        </form>
        <a class="btn btn-info" href="@Model.DishId/edit">Edit</a>
    </div>