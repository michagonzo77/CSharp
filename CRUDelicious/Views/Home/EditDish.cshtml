@model Dish
<main class="newDish">
    <div class="mt-3 d-flex justify-content-start gap-4">
        <a class="display-6" href="/">Home</a>
        <p class="display-6">|</p>
        <a class="display-6" href="/dishes/new">Add New Dish</a>
    </div>
    <div class="d-flex justify-content-center mt-5 border border-dark w-25 p-5">
        <form asp-action="UpdateDish" asp-controller="Home" asp-route-DishId="@Model.DishId" method="post">
            <div class="mb-3">
                <label asp-for="Chef">Chef's Name</label>
                <input asp-for="Chef" class="form-control">
                <span asp-validation-for="Chef" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Name">Name of Dish</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Calories"># of Calories</label>
                <input asp-for="Calories" class="form-control">
                <span asp-validation-for="Calories" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Tastiness"></label>
                <select asp-for="Tastiness" class="form-control">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
                <span asp-validation-for="Tastiness" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input type="submit" value="Edit Dish" class="btn btn-primary">
        </form>
    </div>
</main>