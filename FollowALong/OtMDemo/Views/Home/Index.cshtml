@{
    ViewData["Title"] = "Home Page";
}
@model MyViewModel
<div class="text-center d-flex justify-content-around">
    <div class="flex-1 m-2">
        <h2>Add a Maker</h2>
        @await Html.PartialAsync("_AddMaker", Model.Maker)
    </div>
    <div class="flex-1 m-2">
        <h2>All Makers</h2>
        @foreach(Maker m in Model.AllMakers)
        {
            <h4>@m.Name</h4>
            <ul class="list-unstyled">
                @foreach(Vehicle v in m.AllVehicles)
                {
                    <li>@v.ModelName</li>
                }
            </ul>
        }
    </div>
</div>
