@{
    ViewData["Title"] = "Edit Song";
}
@model Song
<h1 class="display-4 text-center">Edit Song</h1>
<div class="text-center d-flex justify-content-center">
    <form class="w-50" asp-action="UpdateSong" asp-controller="Home" method="post" asp-route-songId="@Model.SongId">
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Year"></label>
            <input asp-for="Year" class="form-control">
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Genre"></label>
            <input asp-for="Genre" class="form-control">
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Artist"></label>
            <input asp-for="Artist" class="form-control">
            <span asp-validation-for="Artist" class="text-danger"></span>
        </div>
        <input type="submit" value="Edit Song" class="btn btn-primary">
    </form>
</div>
