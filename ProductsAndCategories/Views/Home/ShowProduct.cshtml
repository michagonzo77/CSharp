@{
    ViewData["Title"] = "Add Product";
}
@model ShowProductViewModel
<div class="d-flex justify-content-center">
    <ul class="list-unstyled d-flex justify-content-center gap-3">
        <li class="display-6">Products</li>
        <li class="display-6">|</li>
        <li class="display-6"><a class="text-decoration-none" href="/categories">Categories</a></li>
    </ul>
</div>
<div class="d-flex justify-content-center">
    <div class="d-flex gap-3">
        <h1>@Model.Product.Name</h1>
        <h4>$@Model.Product.Price</h4>
    </div>
</div>
<div class="d-flex justify-content-center">
    <h5>@Model.Product.Description</h5>
</div>
<div class="text-center d-flex justify-content-center gap-5 mt-5">
    <div class="flex-1 m-2">
        <h2>Categories</h2>
        @foreach(Association a in Model.Attributes)
        {
            <p>@a.Category.Name</p>
        }
    </div>
    <div class="vl"></div>
    <div class="flex-1 m-2">
        <h2>Add Category</h2>
        @* @{
            Model.Attribute.ProductId = Model.Product.ProductId;
        } *@
        @await Html.PartialAsync("_AddAssociation", Model.Association)
    </div>
</div>