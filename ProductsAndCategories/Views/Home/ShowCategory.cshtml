@{
    ViewData["Title"] = "Add Category";
}
@model ShowCategoryViewModel
<div class="d-flex justify-content-center">
    <ul class="list-unstyled d-flex justify-content-center gap-3">
        <li class="display-6"><a class="text-decoration-none" href="/">Products</a></li>
        <li class="display-6">|</li>
        <li class="display-6">Categories</li>
    </ul>
</div>
<div class="d-flex justify-content-center">
    <div class="d-flex gap-3">
        <h1>@Model.Category.Name</h1>
    </div>
</div>
<div class="text-center d-flex justify-content-center gap-5 mt-5">
    <div class="flex-1 m-2">
        <h2>Products</h2>
        @foreach (Association a in Model.Attributes)
        {
            <div class="d-flex"> 
                <p>@a.Product.Name</p>
                <form asp-action="DestroyItem" asp-controller="Home" asp-route-associationId="@a.AssociationId" method="post">
                    <input type="submit" value="Delete" class="btn btn-danger">
                </form>
            </div>
        }
    </div>
    <div class="vl"></div>
    <div class="flex-1 m-2">
        <h2>Add Product</h2>
        @* @{
            Model.Attribute.CategoryId = Model.Category.CategoryId;
            } *@
        @await Html.PartialAsync("_AddItem", Model.Association)
    </div>
</div>