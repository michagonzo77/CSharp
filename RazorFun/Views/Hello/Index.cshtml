<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
@{
    List<string> StringList = new List<string> {"Apple Pie", "Pizza", "Cinammon Rolls", "Lasagna", "Donuts", "Chocolate Cake", "Burritos"};            
    foreach(string word in StringList)    
    {        
        // We can render HTML from within C# code!
    	// We just have to remember to bring @ back if we want to render variables
        if (word.StartsWith("C"))
        {
            <p class="red">@word</p>
        } else {
            <p>@word</p>    
        }
    }
}
</body>
</html>