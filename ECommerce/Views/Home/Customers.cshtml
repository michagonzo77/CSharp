        <li><a href="/orders">Orders</a></li>
        <li>|</li>
        <li>Customers</li>
        <li>|</li>
    </ul>
</div>
<h3>Add a new customer</h3>
@await Html.PartialAsync("_AddCustomer", Model.Customer)
<div class="mt-3">
    <table class="table table-striped">
        <tr>
            <th>Customer Name</th>
            <th>Joined On</th>
            <th>Actions</th>
        </tr>
    @foreach(Customer c in Model.AllCustomers)
    {
        <tr>
            <td>@c.Name</td>
            <td>@c.CreatedAt</td>
            <td>
                <form asp-action="DestroyCustomer" asp-controller="Home" asp-route-customerId="@c.CustomerId" method="post">
                    <input type="submit" value="Remove" class="btn btn-danger">
                </form>
            </td>
        </tr>
    }
    </table>
</div>